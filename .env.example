# Database
# PostgreSQL connection string
# For local development, you can use a local PostgreSQL instance or Supabase
# If you see "Unable to start a transaction in the given time", add connection pool params:
# ?connection_limit=10&pool_timeout=20
DATABASE_URL="postgresql://user:password@host:5432/dbname?sslmode=require"

# NextAuth Configuration
# Your application URL (use http://localhost:3000 for local development)
NEXTAUTH_URL="http://localhost:3000"
# Generate a random secret: openssl rand -base64 32
# Or use: https://generate-secret.vercel.app/32
NEXTAUTH_SECRET="your-generated-secret-here"

# Stripe Configuration
# Get your API keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=""
# Get webhook secret from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET="whsec_..."
# Optional: Pre-created Stripe Price IDs (recommended for production)
# Create products/prices in Stripe Dashboard and add the price IDs here
# Format: price_xxxxx (for test mode) or price_xxxxx (for live mode)
STRIPE_PRICE_ID_GROWTH=""
STRIPE_PRICE_ID_PRO=""

# Email Service (Resend)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY="re_..."

# SMS Service (Twilio) - Optional
# Get credentials from: https://console.twilio.com
# Users need a phone number in their profile to receive SMS
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# AI Service (Google Gemini)
# Get your API key from: https://aistudio.google.com/apikey
# Optional: AI features will fail gracefully if not set
GEMINI_API_KEY="your-api-key-here"

# Support Email (Optional)
# Defaults to 'support@shiftely.com' if not set
SUPPORT_EMAIL="support@shiftely.com"
